{
  "manifest_version": 3,
  "name": "TrackZen",
  "description": "Track time spent on internet and improve productivity.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/trackzen-logo-16.png",
    "48": "icons/trackzen-logo-48.png",
    "128": "icons/trackzen-logo-128.png"
  },
  "permissions": ["tabs", "storage", "idle"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrackZen",
    "default_icon": {
      "16": "icons/trackzen-logo-16.png",
      "48": "icons/trackzen-logo-48.png",
      "128": "icons/trackzen-logo-128.png"
    }
  }
}
